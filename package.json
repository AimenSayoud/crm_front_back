{
  "name": "crm-full-stack",
  "version": "1.0.0",
  "description": "Full-stack CRM application with frontend and backend",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"ðŸ”´BACKEND,ðŸ”µFRONTEND\" --prefix-colors \"red.bold,blue.bold\" --prefix \"[{time}]\" --timestampFormat \"HH:mm:ss\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:simple": "concurrently --names \"ðŸ”´BACKEND,ðŸ”µFRONTEND\" --prefix-colors \"red.bold,blue.bold\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "clean": "cd frontend && rm -rf .next && npm cache clean --force",
    "clean:win": "cd frontend && rmdir /s /q .next && npm cache clean --force",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "concurrently --names \"ðŸ”´BACKEND,ðŸ”µFRONTEND\" --prefix-colors \"red.bold,blue.bold\" \"npm run backend:start\" \"npm run frontend:start\"",
    "backend:start": "cd backend && npm start",
    "frontend:start": "cd frontend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 